<%- include('./partials/navbar') %>

<div class="container">
    <div class="heading_h">
        <h1>Welcome <%= user.username %></h1>
        <p>Manage your Reminders</p>
    </div>
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="text-center">Add Reminders</h2>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input type="text" class="form-control" name="subject" placeholder="Subject"><br>
                    <label class="form-label">Phone No.</label>
                    <input type="number" class="form-control" name="phone" placeholder="Phone No."><br>
                    <label class="form-label">Last Time and Date</label>
                    <input type="time" class="form-control" name="date" placeholder="Last Date"><br>
                    <input type="date" class="form-control" name="time" placeholder="Last Time"><br>


                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="text-center">Reminders Lists</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Subject</th>
                        <th>Phone No.</th>
                        <th>Time</th>
                        <th>Date</th>
                    </tr>
                </thead>
                
            </table>
        </div>
    </div>
</div>
